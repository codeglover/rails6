
<%= form_with(model: post, id: dom_id(post), class: "needs-validation", data: {controller: "form"}) do |form| %>
    <h5 class="mb-3">New Post</h5>
    <div class="row g-3">
    <div class="field col-sm-6">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, required: true, class: "form-control form-control-md" %>
    </div>
    <div class="field col-sm-6">
      <%= form.label :publish_date %>
      <%= form.date_select :publish_date, class: "form-control form-control-md" %>
    </div>
    <div class="field col-sm-6">
      <%= form.label :happy %>
      <%= form.check_box :happy, class: "form-control form-control-sm left" %>
    </div>
    <div class="field col-sm-6">
      <%= form.label :scale, "How happy are you?", class: "form-label" %>
      <%= form.range_field :scale, required: true, in: 1..10, class: "form-range" %>
    </div>
    <% form.fields_for :kids, Comment.new do |comment| %>
        <%= comment.label :text %>
        <%= comment.text_field :text, required: true, class: "form-control form-control-md" %>
    <% end %>
    <label for="comment">
      <%= link_to_add_association '<i class=""></i>add'.html_safe, form, :kids, class: 'btn btn-xs btn-default', style: '', id: "add_comment_button" %>
    </label>
    <hr>
      <hr class="my-4">
    <div class="actions">
      <%= form.submit class: "w-100 left btn btn-primary btn-lg submit-button" %>
    </div>
      </div>
<% end %>




